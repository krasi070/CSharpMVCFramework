@using CarDealer.Services.Models.Customers
@model CustomerTotalSalesModel

@{
    ViewData["Title"] = $"Total Sales for Customer {Model.Name}";
}

<h2>@ViewData["Title"]</h2>

@{ 
    var totalCars = Model.BoughtCars.Count();
}

<p>
    @totalCars @(totalCars != 1 ? "Cars" : "Car") Bought
</p>
<p>
    $@Model.TotalSpentMoney.ToString("F2")
</p>