@using CarDealer.Services.Models.Sales
@model SaleDetailsModel

@{
    ViewData["Title"] = "Sale Details";
}

<h2>@ViewData["Title"]</h2>
<h3>@Model.CustomerName</h3>
<p>
    @(Model.Discount * 100)%@(Model.IsYoungDriver ? " + 5%" : "")
</p>
<p>
    $@Model.DiscountedPrice.ToString("F2")
</p>
<p>
    @Model.Car.Make @Model.Car.Model - @(Model.Car.TravelledDistance / 1000) km
</p>