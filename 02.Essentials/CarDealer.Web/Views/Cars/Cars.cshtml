@using CarDealer.Services.Models.Cars
@model IEnumerable<CarModel>

<h2>
    @ViewData["Title"]
    <a href="/cars/create" class="btn btn-primary">Add Car</a>
</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Make
            </th>
            <th>
                Model
            </th>
            <th>
                Travelled Distance
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>
                    <a href="/cars/@car.Make">@car.Make</a>
                </td>
                <td>
                    @car.Model
                </td>
                <td>
                    @(car.TravelledDistance / 1000) km
                </td>
                <td>
                    <a class="btn btn-small btn-default" href="/cars/@car.Id/parts">More Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>